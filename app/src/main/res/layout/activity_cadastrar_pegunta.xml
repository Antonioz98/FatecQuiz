<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_pergunta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/cadastrar_pergunta_pergunta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pergunta" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/input_layout_pergunta">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/cadastrar_pergunta_alternativa_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Alternativa A" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/input_layout_a">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/cadastrar_pergunta_alternativa_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Alternativa B" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/input_layout_b">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/cadastrar_pergunta_alternativa_c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Alternativa C" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/input_layout_c">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/cadastrar_pergunta_alternativa_d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Alternativa D" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/cadastrar_pergunta_botao"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="8dp"
            android:padding="20dp"
            android:text="Cadastrar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input_layout_d"
            app:layout_constraintVertical_bias="0"
            tools:layout_editor_absoluteX="50dp" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>